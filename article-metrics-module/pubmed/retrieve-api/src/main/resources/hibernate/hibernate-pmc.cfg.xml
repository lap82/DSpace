<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- SEE HERE -> connection parameters in hibernate.properties -->
		
		<!--<property name="hbm2ddl.auto">create</property>-->		
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="hibernate.default_batch_fetch_size">20</property>		
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.bytecode.use_reflection_optimizer">true</property>	
		<property name="hibernate.generate_statistics">false</property>
		
		<!-- In alternativa al C3P0 -->
		<property name="hibernate.connection.pool_size">30</property>	



		<!-- Added by Allen -->
		<property name="hibernate.c3p0.idle_test_period">300</property>
		<property name="connection.autoReconnect">true</property>
		<property name="connection.autoReconnetForPools">true</property>
		<property name="c3p0.timeout">100000</property>



		<mapping class="it.cilea.osd.common.core.TimeStampInfo" />
		<mapping class="it.cilea.osd.common.core.SingleTimeStampInfo" />
		
		<mapping class="it.cilea.pmc.model.PMCRecord" />
		<mapping class="it.cilea.pmc.model.PMCCitation" />
	</session-factory>

</hibernate-configuration>

